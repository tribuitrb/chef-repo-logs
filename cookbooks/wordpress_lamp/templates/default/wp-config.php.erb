 *
 * @package WordPress
 */

// ** MySQL settings - You can get this info from your web host ** //
/** The name of the database for WordPress */
define( 'DB_CREDENTIALS_PATH', dirname( ABSPATH ) ); // cache it for multiple use
define( 'WP_LOCAL_SERVER', file_exists( DB_CREDENTIALS_PATH . '/wp-config-local.php' ) );
define( 'WP_STAGING_SERVER', file_exists( DB_CREDENTIALS_PATH . '/wp-config-staging.php' ) );

define( 'WP_CONTENT_DIR', $_SERVER['DOCUMENT_ROOT'] . '/content' );
define( 'WP_CONTENT_URL', 'http://' . $_SERVER['HTTP_HOST'] . '/content');
define( 'WP_PLUGIN_DIR', $_SERVER['DOCUMENT_ROOT'] . '/content/plugins' );
define( 'WP_PLUGIN_URL', 'http://' . $_SERVER['HTTP_HOST'] . '/content/plugins' );

if ( WP_LOCAL_SERVER ){
    require DB_CREDENTIALS_PATH . '/wp-config-local.php';
} else if ( WP_STAGING_SERVER ){
    require DB_CREDENTIALS_PATH . '/wp-config-staging.php';
} else {
    // live database details
    define('DB_NAME', '<%= @DatabaseName %>');
    define('DB_USER', 'root');
    define('DB_PASSWORD', '<%= @DatabasePassword %>');
    define('DB_HOST', '<%= @DatabaseHost %>');
    define('DB_CHARSET', 'utf8'); //WPE
    define('DB_COLLATE', ''); //WPE
    define('WP_DEBUG', false);
}


